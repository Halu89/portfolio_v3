#modal.hide
  section.modal__child 
    form
      label(for="email") Your Email :
        input#email(type="email", name="email" required)
      label(for="subject") Subject :
        input#subject(type="text", name="subject" required)
      label(for="message") Message :
        textarea#message(name="message", cols="30", rows="10" required)
      p#form__error
    .modal__buttons
      button.btn#sendMail Send
      button.btn.outline#closeForm Close